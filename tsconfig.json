{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es5", "es2015"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
